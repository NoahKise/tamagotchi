<!DOCTYPE html>
<html>

<body>
  @using Tamagotchi.Models;
  
    <h1>Tamagotchis!</h1>

    @if (Model.Count == 0)
    {
      <p>There are no pets to display.</p>
    }
    @foreach (Pet pet in Model)
    {
      <h2>
        <a href="/pets/@pet.Id">@pet.Name</a>
      </h2>
      @if (pet.Happiness == 0 || pet.Hunger == 10 || pet.Energy == 0)
      {
        <p>Deceased :(</p>
      }
      <br>
      
    }
    <a href="/pets/new">Add a new pet.</a>
  </div>
</body>

</html>